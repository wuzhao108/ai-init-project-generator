<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>{{ config.package }}</groupId>
        <artifactId>{{ config.name }}</artifactId>
        <version>{{ config.version }}</version>
    </parent>

    <artifactId>{{ module_name }}</artifactId>
    <packaging>jar</packaging>

    <name>{{ config.name }}-{{ module_name }}</name>
    <description>{{ module_description | default('Module for ' + config.name) }}</description>

    <dependencies>
        <!-- Spring Boot Starter Web -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-web</artifactId>
        </dependency>

        {% if module_name == 'common' %}
        <!-- Common module dependencies -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter</artifactId>
        </dependency>
        {% elif module_name == 'api' %}
        <!-- API module dependencies -->
        <dependency>
            <groupId>{{ config.package }}</groupId>
            <artifactId>{{ config.name }}-common</artifactId>
            <version>${project.version}</version>
        </dependency>
        {% elif module_name == 'service' %}
        <!-- Service module dependencies -->
        <dependency>
            <groupId>{{ config.package }}</groupId>
            <artifactId>{{ config.name }}-common</artifactId>
            <version>${project.version}</version>
        </dependency>
        
        {% set tech_stack = config.tech_stack %}
        {% if tech_stack.database != 'none' %}
        {% if tech_stack.database == 'mysql' %}
        <!-- MySQL Driver -->
        <dependency>
            <groupId>mysql</groupId>
            <artifactId>mysql-connector-java</artifactId>
            <scope>runtime</scope>
        </dependency>
        {% elif tech_stack.database == 'postgresql' %}
        <!-- PostgreSQL Driver -->
        <dependency>
            <groupId>org.postgresql</groupId>
            <artifactId>postgresql</artifactId>
            <scope>runtime</scope>
        </dependency>
        {% elif tech_stack.database == 'h2' %}
        <!-- H2 Database -->
        <dependency>
            <groupId>com.h2database</groupId>
            <artifactId>h2</artifactId>
            <scope>runtime</scope>
        </dependency>
        {% endif %}

        {% if tech_stack.orm == 'jpa' %}
        <!-- Spring Boot Starter Data JPA -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-data-jpa</artifactId>
        </dependency>
        {% elif tech_stack.orm == 'mybatis' %}
        <!-- MyBatis Spring Boot Starter -->
        <dependency>
            <groupId>org.mybatis.spring.boot</groupId>
            <artifactId>mybatis-spring-boot-starter</artifactId>
            <version>3.0.3</version>
        </dependency>
        {% endif %}
        {% endif %}
        {% elif module_name == 'web' %}
        <!-- Web module dependencies -->
        <dependency>
            <groupId>{{ config.package }}</groupId>
            <artifactId>{{ config.name }}-api</artifactId>
            <version>${project.version}</version>
        </dependency>
        
        <dependency>
            <groupId>{{ config.package }}</groupId>
            <artifactId>{{ config.name }}-service</artifactId>
            <version>${project.version}</version>
        </dependency>
        
        {% if 'swagger' in config.tech_stack.doc %}
        <!-- Swagger/OpenAPI -->
        <dependency>
            <groupId>org.springdoc</groupId>
            <artifactId>springdoc-openapi-starter-webmvc-ui</artifactId>
            <version>2.2.0</version>
        </dependency>
        {% endif %}
        
        {% if config.tech_stack.actuator %}
        <!-- Spring Boot Actuator -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-actuator</artifactId>
        </dependency>
        {% endif %}
        {% endif %}

        <!-- Spring Boot Starter Test -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-test</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>

    {% if module_name == 'web' %}
    <build>
        <plugins>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
                <version>${spring-boot.version}</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>repackage</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
    {% endif %}
</project>